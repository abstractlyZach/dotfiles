# open terminal
alt - return : /Applications/Kitty.app/Contents/MacOS/kitty --single-instance -d ~

# switch window
alt - k : yabai -m window --focus prev || yabai -m window --focus next
alt - j : yabai -m window --focus next || yabai -m window --focus prev

# focus monitor
alt - 0x2B : yabai -m display --focus next || yabai -m display --focus prev # comma
alt - 0x2F : yabai -m display --focus prev || yabai -m display --focus next # period

# destroy desktop
cmd + alt - w : yabai -m space --destroy

# resize window
alt - h : yabai -m window --resize left:-20:0
alt - l : yabai -m window --resize right:20:0


# float / unfloat window and center on screen
alt - t : yabai -m window --toggle float;\
          yabai -m window --grid 4:4:1:1:2:2

# send window to space
shift + alt - 1 : yabai -m window --space 1
shift + alt - 2 : yabai -m window --space 2
shift + alt - 3 : yabai -m window --space 3
shift + alt - 4 : yabai -m window --space 4
shift + alt - 5 : yabai -m window --space 5
shift + alt - 6 : yabai -m window --space 6
shift + alt - 7 : yabai -m window --space 7
shift + alt - 8 : yabai -m window --space 8
shift + alt - 9 : yabai -m window --space 9

# send window to display
shift + alt - 0x2B : yabai -m window --display next || yabai -m window --display prev  # comma
shift + alt - 0x2F : yabai -m window --display prev || yabai -m window --display next  # period

# no-op. prevents me from "hiding" windows through OSX's hotkeys
cmd - h : :

alt - i : kitty --single-instance htop
alt - r : kitty --single-instance ranger ~/workspace
# open new chrome window
# https://apple.stackexchange.com/questions/305901/open-a-new-browser-window-from-terminal/305902#305902?s=daffdeaf3b36431dabe86ffde93950d1
alt - w : open -na "Brave Browser" --args --new-window 
alt - 0x32 : kitty --single-instance ~/bin/fzf_emoji # backtick

alt - q : yabai -m window --close
