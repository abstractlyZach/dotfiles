# open terminal
alt - return : /Applications/Alacritty.app/Contents/MacOS/alacritty

# switch window
alt - j : yabai -m window --focus south
alt - k : yabai -m window --focus north
alt - h : /Users/leez/bin/yabai_relative_focus west
alt - l : /Users/leez/bin/yabai_relative_focus east

# focus monitor
alt - 0x2B : yabai -m display --focus next || yabai -m display --focus prev # comma
alt - 0x2F : yabai -m display --focus prev || yabai -m display --focus next # period

# destroy desktop
cmd + alt - w : yabai -m space --destroy

# resize window
# alt - h : yabai -m window --resize left:-20:0
# alt - l : yabai -m window --resize right:20:0


# float / unfloat window and center on screen
alt - t : yabai -m window --toggle float;\
          yabai -m window --grid 4:4:1:1:2:2

# center the window so that it takes up the middle 2 quarters of the screen horizontally
alt - c : yabai -m window --toggle float;\
          yabai -m window --grid 1:4:1:1:2:1

# center the window so that it takes up the middle 3/5ths of the screen horizontally
shift + alt - c : yabai -m window --toggle float;\
          yabai -m window --grid 1:5:1:1:3:1

# move the window to the left quarter of the screen
alt - x : yabai -m window --toggle float;\
          yabai -m window --grid 1:4:0:0:1:1

# move the window to the right quarter of the screen
alt - v : yabai -m window --toggle float;\
          yabai -m window --grid 1:4:3:1:1:1

# send window to space
shift + alt - 1 : yabai -m window --space 1
shift + alt - 2 : yabai -m window --space 2
shift + alt - 3 : yabai -m window --space 3
shift + alt - 4 : yabai -m window --space 4
shift + alt - 5 : yabai -m window --space 5
shift + alt - 6 : yabai -m window --space 6
shift + alt - 7 : yabai -m window --space 7
shift + alt - 8 : yabai -m window --space 8
shift + alt - 9 : yabai -m window --space 9
shift + alt - 0 : yabai -m window --space 0

# send window to display
shift + alt - 0x2B : yabai -m window --display next || yabai -m window --display prev  # comma
shift + alt - 0x2F : yabai -m window --display prev || yabai -m window --display next  # period

# no-op. prevents me from "hiding" windows through OSX's hotkeys
cmd - h : :

alt - i : /Applications/Alacritty.app/Contents/MacOS/alacritty --command htop
alt - r :  /Applications/Alacritty.app/Contents/MacOS/alacritty --command ranger ~/workspace
# open new chrome window
# https://apple.stackexchange.com/questions/305901/open-a-new-browser-window-from-terminal/305902#305902?s=daffdeaf3b36431dabe86ffde93950d1
alt - w : open -na "Brave Browser" --args --new-window 
alt - 0x32 : /Applications/Alacritty.app/Contents/MacOS/alacritty --command ~/bin/fzf_emoji # backtick

alt - q : yabai -m window --close

alt - 0x30: yabai -m window --focus recent # tab
